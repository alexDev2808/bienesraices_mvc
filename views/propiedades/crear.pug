extends ../layout/index

block contenido
    div.py-10
        h1(class="text-4xl my-10 font-extrabold text-center") Bienes
            span.font-normal Raices
        h2(class="text-center font-extrabold text-2xl")= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            
            form(class="space-y-8")
                div(class="space-y-5")
                    h3(class="text-lg leading-6 font-bold text-gray-900") Informacion General
                    p(class="text-gray-600") Agrega informacion sobre la propiedad en venta   

                    div
                        label(for="titulo" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Titulo de Anuncio
                        input(id="titulo" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" placeholder="Titulo Propiedad, ej. Casa en la Playa" type="text" name="titulo")     

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/2")
                            label(for="categoria" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Categoria
                            select(id="categoria" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="categoria") 
                                option(value="") - Seleccione - 
                                
                        div(class="md:w-1/2")
                            label(for="precio" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Precio
                            select(id="precio" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="precio") 
                                option(value="") - Seleccione - 


                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")

                        div(class="md:w-1/3")
                            label(for="habitaciones" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Habitaciones
                            select(id="habitaciones" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="habitaciones") 
                                option(value="") - Seleccione - 
                                - let nHab = 1;
                                    while nHab < 5
                                        option(value=nHab) #{nHab++}
                                
                        div(class="md:w-1/3")
                            label(for="estacionamientos" class="block text-sm uppercase text-gray-500 mb-2 font-bold") Estacionamiento
                            select(id="estacionamientos" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="estacionamientos") 
                                option(value="") - Seleccione - 
                                - let nEst = 1;
                                    while nEst < 4
                                        option(value=nEst) #{nEst++}
                                
                        div(class="md:w-1/3")
                            label(for="wc" class="block text-sm uppercase text-gray-500 mb-2 font-bold") WC
                            select(id="wc" class="w-full px-3 py-2 border border-gray-300 rounded-md placeholder-gray-400" name="wc") 
                                option(value="") - Seleccione - 
                                - let nWC = 1;
                                    while nWC < 6
                                        option(value=nWC) #{nWC++}


block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="https://unpkg.com/esri-leaflet@3.0.8/dist/esri-leaflet.js")
    script(src="https://unpkg.com/esri-leaflet-geocoder@2.2.13/dist/esri-leaflet-geocoder.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/leaflet-geosearch/2.7.0/bundle.min.js")
    script(src="/js/mapa.js")